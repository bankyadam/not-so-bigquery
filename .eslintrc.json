{
  "root": true,
  "extends": [
    "emarsys"
  ],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sandbox": true
  },
  "plugins": [
    "require-path-exists"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-expressions": 0,
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "require-yield": 0,
    "security/detect-object-injection": 0,
    "require-path-exists/notEmpty": 2,
    "require-path-exists/exists": 2,
    "security/detect-non-literal-fs-filename": "off"
  }
}
